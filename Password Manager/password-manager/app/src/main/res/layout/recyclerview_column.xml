<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="?attr/cardBackgroundColor"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/extra_info_tags">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_lock"
                android:contentDescription="@string/todo"
                android:layout_gravity="center"
                app:tint="@color/dark_gray" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintTop_toTopOf="@id/image_card"
            app:layout_constraintBottom_toTopOf="@id/secondary_text"
            app:layout_constraintStart_toEndOf="@id/image_card"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="?attr/colorOnSecondary"
            android:fontFamily="@font/product_sans_thin"
            app:layout_constraintStart_toEndOf="@id/image_card"
            app:layout_constraintBottom_toBottomOf="@id/image_card"
            app:layout_constraintTop_toBottomOf="@id/account_name"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/copy_to_clipboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_paperclip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_card"
            app:layout_constraintBottom_toBottomOf="@id/image_card"
            app:tint="?attr/colorOnSecondary"
            android:background="@drawable/custom_image_bg"/>
        <ImageView
            android:id="@+id/expand_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_up"
            app:layout_constraintTop_toTopOf="@id/copy_to_clipboard"
            app:layout_constraintBottom_toBottomOf="@id/copy_to_clipboard"
            app:layout_constraintEnd_toStartOf="@id/copy_to_clipboard"
            android:padding="10dp"
            app:tint="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/extra_info_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_card"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:text="@string/app_name"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>