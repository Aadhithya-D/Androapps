<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameFragment">
    <ImageView
        android:id="@+id/imageView"
        android:transitionName="game_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_game_1_1s_47px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/user_gamename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user#1234"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/ubuntu_medium"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE: 00"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_gravity="end"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/user_gamename" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a meaningful word from letters below"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_word"
        android:layout_margin="16dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_word"
        android:layout_width="260dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="25dp"
        android:padding="20dp"
        android:backgroundTint="?attr/cardBackgroundColor"
        android:outlineSpotShadowColor="@color/black">

        <TextView
            android:id="@+id/scrambled_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="bulplup"
            android:textColor="?attr/colorOnSecondary"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="50sp"
            android:textAlignment="center"
            android:autoSizeMaxTextSize="70sp"
            android:autoSizeMinTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="20dp"
            tools:ignore="UnusedAttribute" />

    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/hint_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_bulb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_word"
        app:layout_constraintBottom_toTopOf="@id/guess_word_layout"
        app:tint="?attr/colorSecondary" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/guess_word_layout"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/card_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxStrokeColor="@null"
        app:boxBackgroundColor="?attr/cardBackgroundColor"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        app:errorEnabled="true"
        app:errorTextColor="@color/red"
        app:errorIconDrawable="@drawable/ic_round_warning_24"
        app:errorIconTint="@color/red"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/guess_word_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/guess_the_word"
            android:fontFamily="@font/ubuntu_medium"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/next_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_round_arrow_forward_24"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="true"
        android:contentDescription="@string/next_card"
        android:background="@null"
        android:tint="@null"
        app:backgroundTint="?attr/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>